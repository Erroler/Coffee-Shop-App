<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screens.scanner.ScannerFragment">

    <data>
        <variable
            name="handler"
            type="com.feup.cmov.acme_terminal.screens.scanner.ScannerHandler" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coffee_trimmed"
            android:layout_marginBottom="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:layout_marginBottom="25dp"
            android:text="@string/welcome"/>

        <Button
            android:id="@+id/scanOrderBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="50dp"
            android:paddingVertical="20dp"
            android:text="@string/scan_order"
            android:drawableRight="@drawable/ic_baseline_qr_code_2_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/white"
            android:textSize="25sp"
            android:onClick="@{handler::onScanOrderButtonClick}"/>

    </LinearLayout>

</layout>